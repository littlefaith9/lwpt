{
  "name": "pt-mini",
  "author": "LittleFaith9",
  "description": "Lightweight PT App",
  "version": "0.0.0",
  "devDependencies": {
    "@types/electron-prompt": "^1.6.5",
    "@types/node": "^25.0.3",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "terser": "^5.44.1",
    "tsc": "^2.0.4",
    "typescript": "^5.9.3"
  },
  "main": "index.min.js",
  "scripts": {
    "dev": "electron .",
    "build-exe": "electron-builder --win",
    "ts": "tsc --skipLibCheck index.ts",
    "min": "terser index.js -c -m -o index.min.js"
  },
  "build": {
    "appId": "com.pony.town.miniwindow",
    "productName": "Pony Town",
    "win": {
      "target": "portable",
      "icon": "favicon"
    },
    "files": [
      "index.min.js",
      "package.json",
      "package-lock.json"
    ]
  },
  "dependencies": {
    "electron-prompt": "^1.7.0"
  }
}
